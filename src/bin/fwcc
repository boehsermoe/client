#!/usr/bin/env php
<?php
define('YII_DEBUG', true);
// loaders array
$loaders = [
    'vendor/autoload.php',
    '/../vendor/autoload.php',
    '/../../vendor/autoload.php',
    '/../../../vendor/autoload.php',
    '/../../../../vendor/autoload.php',
];
// find vendor if exists
foreach ($loaders as $file) {
    if (file_exists($file)) {
        require($file);
        $vendor = pathinfo($file, PATHINFO_DIRNAME);
    }
}

$boot = new \luya\Boot();
$boot->setBaseYiiFile($vendor . '/yiisoft/yii2/Yii.php');
$boot->setConfigArray([
    'id' => 'clientfwcc', 
    'basePath' => dirname(__DIR__), 
    'enableCoreCommands' => false,
    'controllerMap' => [
        'watch' => 'fwcc\client\controllers\WatchController',
        'compile' => 'fwcc\client\controllers\CompileController',
    ],
]);
$boot->applicationConsole();